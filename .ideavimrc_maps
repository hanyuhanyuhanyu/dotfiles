  nnoremap ,, <C-w><
  nnoremap za zA
  nnoremap zA za
  nnoremap zo zO
  nnoremap zO zo
  nnoremap ` ~
  nnoremap ; :
  nnoremap : ;
  nnoremap j gj
  nnoremap k gk
  nnoremap p P
  nnoremap P p
  nnoremap <C-n> <C-w>
  nnoremap x "_x
  nnoremap X "_X
  nnoremap い i
  nnoremap う u
  nnoremap え e
  nnoremap お o
  nnoremap O O
  nnoremap ｊ j
  nnoremap ｈ h
  nnoremap ｋ k
  nnoremap ｌ l
  nnoremap ｗ w
  nnoremap ｐ p
  nnoremap っｙ yy
